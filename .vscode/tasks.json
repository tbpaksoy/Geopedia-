{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build Geopedia++",
			"command": "C:\\msys64\\clang64\\bin\\clang++.exe",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-fsanitize=address",
				"-Iinclude",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-Llibs",
				"-lopengl32",
				"-lglfw3",
				"-lglew32",
				"cppfiles\\*.cpp",
				"src\\*.cpp",
				"src\\light\\*.cpp",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\clang64\\bin\\clang++.exe"
		}
	]
}